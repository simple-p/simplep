<!DOCTYPE html>
<html lang="en">
	<head>
		<title>SimpleP</title>
		<%= csrf_meta_tags %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<link rel="icon" type="image/png" href="https://image.freepik.com/free-icon/social-media-collaboration_318-32157.jpg">
	</head>

	<body>

		<div class="container-fluid">
			<div class="row">
				<nav class="navbar navbar-dark navbar-fixed-top bg-inverse">
					<button type="button" class="navbar-toggler hidden-sm-up" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" aria-label="Toggle navigation"></button>

					<% if user_signed_in? %>
						<a class="navbar-brand" href="#">Hello <%= current_user.name %></a>
						<div id="navbar">
							<nav class="nav navbar-nav">
								<a class="nav-item nav-link" href="#">Dashboard</a>
								<a class="nav-item nav-link" href="<%= activities_path %>">Activities</a>
								<a class="nav-item nav-link" href="#">Tasks</a>
								<span class="navbar-text text-muted">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img style="height:25px" src="https://ssl.gstatic.com/onebox/weather/64/partly_cloudy.png" />&nbsp;This is the first company message!</span>
								<div class="btn-group float-xs-right">
									<button type="button" class="btn btn-default dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<span class="fa fa-user"></span>
										<span class="sr-only">Toggle Dropdown</span>
									</button>
									<div class="dropdown-menu dropdown-menu-right">
										<div style="display:flex;justify-content:center;align-items:center;"><%= image_tag(current_user.avatar.url(:thumb), class: 'round-image')%></div>
										<%= link_to 'Profile', "#", class: "dropdown-item" %>
										<a class="dropdown-item" href="#">Messages</a>
										<div class="dropdown-divider"></div>
										<%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
									</div>
								</div>
							</nav>

						</div>
					<% else %>

						<ul class="nav navbar-nav">
							<li class="nav-item" ><%= link_to 'Log In', new_user_session_path, class: "nav-link" %></li>
							<li class="nav-item"><%= link_to 'Sign Up', new_user_registration_path, class: "nav-link" %></li>
						</ul>
					<% end %>
				</nav>
			</div>
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>
			<%= flash_messages %>
			<div id="wrapper" class="active">
				<%if user_signed_in? %>
					<div id = "sidebar-wrapper">
						<ul class="sidebar-nav" id="sidebar">
							<li class="sidebar-brand"><a id="menu-toggle" href="#">Menu &nbsp;&nbsp;&nbsp; <span class="fa fa-align-justify"></span></a></li>
							<li><a href="<%= projects_path %>">Projects &nbsp;&nbsp;</a>
								<%= link_to "<span class='fa fa-plus-circle' style='color:white'></span>".html_safe, root_path, data: { toggle: "modal", target: "#ajax-modal-project" } %>
							</li>
							<li><a href="<%= teams_path %>">Team &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <span class="fa fa-users"></span></a></li>
							<li><a href="#">Reporting<span class="fa fa-bar-chart"></span></a></li>
						</ul>
					</div>
					<div class="col-sm-9 main">
						<%= yield %>
					</div>
				<%else %>
					<%= yield %>
				<%end%>
			</div>
		</div>
		<%= render 'projects/dialog' %>

		<script type="text/javascript">
			$("#menu-toggle").click(function(e) {
				e.preventDefault();
				$("#wrapper").toggleClass("active");
			});
		</script>
	</body>
</html>
