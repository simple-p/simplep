<!DOCTYPE html>
<html lang="en">
  <head>
    <title>SimpleP</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" type="image/png" href="assets/logo.png">
  </head>

  <body>
    <% if user_signed_in? %>
      <div class="container-fluid">
        <div class="row">

          <nav id="topNav" class="navbar nav navbar-default bg-faded">
            <button type="button" class="navbar-toggler hidden-sm-up" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" aria-label="Toggle navigation"></button>
            <div id="navbar">
              <ul class="nav navbar-nav">
                <a class="navbar-brand" href="/"><img src="/assets/logo.png" style="height:30px;"> Simple P</a>
                <a class="navbar-brand" href="/activities"><i class="fa fa-cogs fa-lg" aria-hidden="true"></i></a>
                <a class="navbar-brand" href="/tasks"><i class="fa fa-tasks fa-lg" aria-hidden="true"></i></a>
                <div class="navbar-brand" >
                  <a href="/notifications" id="inbox-link"><i class="fa fa-envelope-o fa-lg" aria-hidden="true"></i></a>
                  <%= new_feeds_icon(notification_count) %>
                </div>
                <a class="navbar-brand" href="/search"><i class="fa fa-search fa-lg" aria-hidden="true"></i></a>
                <div class="btn-group float-xs-right">
                  <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="fa fa-user"></span> <%= current_user.name %>
                  <span class="sr-only">Toggle Dropdown</span>
                  </button>
                  <div class="dropdown-menu dropdown-menu-right">
                      <div style="display:flex;justify-content:center;align-items:center;"><%= image_tag(current_user.avatar, class: 'round-image')%></div>
                    <%= link_to 'Profile', "#", class: "dropdown-item" %>
                    <a class="dropdown-item" href="#">Messages</a>
                    <div class="dropdown-divider"></div>
                    <% current_user.my_team.each do |team| %>
                      <%= link_to team.name, switch_path(:team_id => team.id), class: "dropdown-item" %>
                    <% end %>
                    <div class="dropdown-divider"></div>
                    <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                  </div>
              </ul>
                </div>
              <% end %>
          </nav>
            </div>
            <p class="notice"><%= notice %></p>
            <%= flash_toastr %>
            <% if user_signed_in? %>
              <div id="wrapper" class="active">
                <div id = "sidebar-wrapper">
                  <ul class="sidebar-nav" id="sidebar">
                    <li class="sidebar-brand"><a id="menu-toggle" href="#">Menu &nbsp;&nbsp;&nbsp; <span class="fa fa-align-justify"></span></a></li>
                    <li><%= link_to "Projects<i class='fa fa-product float-xs-right'></i>".html_safe, projects_path %></li>
                    <% if current_team %>
                      <% current_team.projects.each do |project| %>
                        <li style="font-size:12px;"><a href="<%= project_path (project)%>" id="project_<%= project.id %>">- <%= project.name %></li>
                      <% end %>
                    <% end %>
                    <li><a href="<%= teams_path %>" id="teams-bar">Team &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </a></li>
                    <% if current_team %>
                      <% current_team.team_member.each do |member| %>
                        <%= link_to image_tag(member.avatar, class: "round-image-16"), "#" %>
                      <% end %>
                    <% end %>
                    <li><a href="/reports">Report&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="fa fa-bar-chart"></span></a></li>
                  </ul>
                </div>
                <%= yield %>
              <% else %>
                <%= yield %>
              <% end %>
              </div>
        </div>
        <%= render 'projects/dialog' %>
        <script>
          // Toggle the sidebar
          $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("active");
          });

          $('#teams').on('click', function(){});
          setInterval(checkFeedsViaJS, 30000);
        </script>
  </body>
</html>
